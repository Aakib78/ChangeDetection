<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comments_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_sheet_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:baselineAligned="false"
            android:minHeight="?android:actionBarSize"
            android:orientation="horizontal"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_micro">

            <ImageView
                android:id="@+id/closecontent"
                android:layout_width="@dimen/avatar_bounds"
                android:layout_height="@dimen/avatar_bounds"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/avatar_margin"
                android:layout_marginEnd="@dimen/avatar_margin"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/avatar_margin"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_close_down" />

            <!--<TextView-->
            <!--android:id="@+id/titlecontent"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="start|center_vertical"-->
            <!--android:layout_weight="1"-->
            <!--android:fontFamily="@font/ibm_medium"-->
            <!--android:paddingRight="16dp"-->
            <!--android:text="Devocionais"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"-->
            <!--android:textColor="@color/FontStrong" />-->

            <android.support.v7.widget.SearchView
                android:id="@+id/searchview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:theme="@style/SearchViewStyle"
                app:defaultQueryHint="Adicionar Coordenadores"
                app:iconifiedByDefault="false" />

            <ImageView
                android:id="@+id/savecontent"
                android:layout_width="@dimen/avatar_bounds"
                android:layout_height="@dimen/avatar_bounds"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/avatar_margin"
                android:layout_marginEnd="@dimen/avatar_margin"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/avatar_margin"
                app:srcCompat="@drawable/ic_close_down" />

            <!--android:textAppearance="@style/TextAppearance.DialogTitle"-->

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/defaultRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windowBackground" />
    </LinearLayout>

</FrameLayout>