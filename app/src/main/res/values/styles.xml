<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/md_grey_500</item>
        <item name="colorAccent">@color/atlasianblue</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <!--https://gist.github.com/ArthurNagy/1c4a64e6c8a7ddfca58638a9453e4aed-->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="ProgressColor">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

    <style name="About" parent="Theme.Mal.Light">
        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="mal_card_background">@color/CARD</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="mal_color_primary">@color/FontStrong</item>
        <item name="mal_color_secondary">@color/FontWeak</item>
    </style>

    <style name="ItemTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/work_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/FontStrong</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBar" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/atlasianblue</item>
    </style>

    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

</resources>
